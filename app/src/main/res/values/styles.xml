<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ErroMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/error_message</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MovieListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/list_item_margin</item>
    </style>

    <style name="ListItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_image_height</item>
    </style>
    <style name="ListItemTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
    </style>
    <style name="ListItemSubTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_sub_title_size</item>
    </style>
    <style name="DetailsImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/details_image_height</item>
    </style>
    <style name="ProviderImage">
        <item name="android:layout_width">@dimen/provider_image_size</item>
        <item name="android:layout_height">@dimen/provider_image_size</item>
        <item name="android:layout_marginLeft">@dimen/provider_image_margin</item>
    </style>
    <style name="DetailsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
        <item name="android:padding">@dimen/details_header_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/detailsHeader</item>
    </style>
    <style name="DetailsOverview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_sub_title_size</item>
        <item name="android:padding">@dimen/details_header_padding</item>
    </style>
</resources>